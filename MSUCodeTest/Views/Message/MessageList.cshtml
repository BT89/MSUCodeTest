@{
}

@model List<MSUCodeTest.Models.Entities.Message>

<h1> List of Messages</h1>

<table class="table">
    <thead>
        <tr>
            <th> Id</th>
            <th> MessageContent</th>
            <th> MessageDateTime</th>
        </tr>
    </thead>
<tbody>
        @foreach (var message in Model)
        {
            <tr>
                <td>
                    <a href="@Url.Action("ViewMessage","Message", new{id=message.Id})">@message.Id</a>
                </td>
                <td>@message.MessageContent</td>
                <td>@message.MessageDateTime</td>
            </tr>
        }
    </tbody>
</table>